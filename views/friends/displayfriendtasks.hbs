<div id="right">
  <div class="friend_list">
    {{#if friends}}
      {{#each friends}}
        <a href="/friends/view/{{email}}"><img class="small" src="{{image}}"></a>
      {{/each}}
    {{/if}}
  </div>

  <div class="friend">
    <h2 style="margin-left:30px;margin-top:30px;color:white;">{{friendName}}'s tasks</h2>

      {{#if publictasks}}
        <ul style="list-style-type:square; font-size:17px;color:white;">
          {{#each publictasks}}
            <b>{{description}}</b>
            <div class="line-separator"></div>
            <div class="time">{{reminderDate}} {{reminderTime}}</div><br>
          {{/each}}
        </ul>
      {{/if}}
      <a href="/friends/view/{{friendEmail}}/add"><img src="/resources/plus_sign_dark.jpg" alt="plus button" style="width:40px;right:10px;position:absolute;bottom:10px;"></a>
      <a href="/friends" style="color:white; margin-left:30px; position:absolute;bottom:20px;">Return</a>
  </div>
</div>
